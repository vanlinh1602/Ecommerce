<!-- res/navigation/nav_graph.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.stacklab.Fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/profileFragment"
        android:name="com.project.stacklab.Fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />


    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.project.stacklab.Fragments.CartFragment"
        android:label="Category"
        tools:layout="@layout/fragment_cart" />


    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.project.stacklab.Fragments.FavouriteFragment"
        android:label="Favourite"
        tools:layout="@layout/fragment_favourite" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.project.stacklab.Fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <!-- Additional fragments and actions can be defined here -->
</navigation>
