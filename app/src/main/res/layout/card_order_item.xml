<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/white_curve"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_curve"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/curver_banner"
            android:maxLines="1"
            android:padding="20dp"
            android:src="@drawable/ic_shiping" />

        <LinearLayout
            android:id="@+id/cardOrderItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Date: 12/12/2021"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/numberProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Number of products: 2"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Total: $ 2"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="1"
                android:text="Status: Pending"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textFontWeight="900"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>